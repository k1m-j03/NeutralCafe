<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FeedbacksActivity">

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5DC">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkBrown"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Hamburger Menu -->
        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:contentDescription="Menu Icon"
            android:src="@drawable/ic_menu" />

        <!-- Logo -->
        <ImageView
            android:id="@+id/logo_icon"
            android:layout_width="316dp"
            android:layout_height="83dp"
            android:contentDescription="logo Icon"
            android:src="@drawable/logo" />

        <!-- Profile Icon -->
        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="44dp"
            android:layout_height="55dp"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:contentDescription="Profile Icon"
            android:src="@drawable/ic_profile" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/edittext_background"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="70dp"
        android:padding="5dp">


        <!-- Feedback Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Feedback"
            android:textSize="30sp"
            android:layout_marginHorizontal="10dp"
            android:textStyle="bold"
            android:textColor="#4E260E"
            android:layout_marginTop="16dp" />

        <!-- Feedback Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="By receiving the feedback from you, we will help us to improve our system qualities and services."
            android:textSize="14sp"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="10dp"
            android:padding="8dp"
            android:background="#D4C7A3"
            android:textColor="#4E260E"/>

        <!-- Questions Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <!-- Friendly Interface Question -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friendly interface"
                android:textSize="16sp"
                android:textColor="#4E260E"
                android:layout_marginBottom="4dp" />

            <RadioGroup
            android:id="@+id/interface_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5" />
        </RadioGroup>

            <!-- System Function Question -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The system functions well"
                android:textSize="16sp"
                android:textColor="#4E260E"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="8dp" />

            <RadioGroup
                android:id="@+id/function_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5" />
            </RadioGroup>

            <!-- System Quality Question -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="System quality"
                android:textSize="16sp"
                android:textColor="#4E260E"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="8dp" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/quality_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2" />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3" />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4" />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5" />
                </RadioGroup>
            </RadioGroup>
        </LinearLayout>

        <!-- Comment Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Write down your comment"
            android:textSize="16sp"
            android:textColor="#4E260E"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/commentEditText"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Write the comment here"
            android:background="#EBD9C1"
            android:padding="8dp"
            android:layout_marginVertical="8dp"
            android:gravity="top"
            android:textColor="#000000"
            android:textSize="14sp" />

    </LinearLayout>



    <!-- Submit Button -->
    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:layout_marginTop="10dp"
        android:backgroundTint="#4E260E"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:paddingHorizontal="24dp"/>
</LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/darkBrown"
        android:textSize="20sp"
        android:textColor="@color/lightBrown"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>